            }
            if (
                $('#cardHolder').val() &&
                $('#cardExpirationMonth').val() &&
                $('#cardExpirationYear').val()
            ) {
                console.log('here');
            }
            if ($('#cardNumber').val()) {
                console.log('good');
            };
        });
    </script>
